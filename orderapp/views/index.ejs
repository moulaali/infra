  <div class="container">
    <!-- Sidebar for the CRUD Menu -->
    <div class="sidebar">
      <h2>AkashX : Demo app (Orders App)</h2>
      <ul>
        <li><a href="/orders/create">Create Order</a></li>
        <li><a href="/orders">View Orders</a></li>
